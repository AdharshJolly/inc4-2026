##############################################
# Required
##############################################

# TinaCMS GitHub OAuth Client ID
NEXT_TINA_CLIENT_ID=

# GitHub token used for Tina, file uploads, and GitHub sync
NEXT_TINA_TOKEN=

# Server-side admin password (used by /api/admin-auth)
ADMIN_PASSWORD=

##############################################
# Recommended (set explicitly for prod)
##############################################

# Client-side fallback password (not secret; defaults to "admin123" if unset)
NEXT_ADMIN_PASSWORD=

# Branch to use for Tina/GitHub sync (defaults to "development")
NEXT_TINA_BRANCH=

##############################################
# Optional
##############################################

# Toggle Tina edit mode ("true" enables preview mode in TinaWrapper)
NEXT_EDIT_MODE=false

# Remote endpoint to receive error logs (leave blank to log locally)
NEXT_ERROR_LOG_ENDPOINT=

# Tina secret (only needed if you use server-side Tina features)
TINA_SECRET=